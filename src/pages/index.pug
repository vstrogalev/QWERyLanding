extends ../layouts/default

block variables
  - var title = "QWERy Welcome to Indonesia";
  - var pageStylesheet = "/index.css";

block content
  section.main.container
    address.social
      .social__text Follow us
      ul.social-list
        li
          a.social__link(href="#0")
            svg.social__icon(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none")
              <path d="M7.8 2h8.4A5.8 5.8 0 0 1 22 7.8v8.4a5.8 5.8 0 0 1-5.8 5.8H7.8A5.8 5.8 0 0 1 2 16.2V7.8A5.8 5.8 0 0 1 7.8 2Zm-.2 2A3.6 3.6 0 0 0 4 7.6v8.8A3.6 3.6 0 0 0 7.6 20h8.8a3.6 3.6 0 0 0 3.6-3.6V7.6A3.6 3.6 0 0 0 16.4 4H7.6Zm9.65 1.5a1.25 1.25 0 1 1 0 2.5 1.25 1.25 0 0 1 0-2.5ZM12 7a5 5 0 1 1 0 10 5 5 0 0 1 0-10Zm0 2a3 3 0 1 0 0 6 3 3 0 0 0 0-6Z"/>
        li
          a.social__link(href="#0")
            svg.social__icon(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none")
              <path d="M22.918 6.012a8.58 8.58 0 0 1-2.464.676 4.305 4.305 0 0 0 1.886-2.374 8.591 8.591 0 0 1-2.725 1.041 4.292 4.292 0 0 0-7.313 3.914 12.184 12.184 0 0 1-8.846-4.483 4.271 4.271 0 0 0-.58 2.157 4.29 4.29 0 0 0 1.908 3.572 4.276 4.276 0 0 1-1.943-.537v.054c0 2.08 1.479 3.814 3.442 4.209a4.296 4.296 0 0 1-1.938.073 4.296 4.296 0 0 0 4.009 2.98 8.61 8.61 0 0 1-5.33 1.838c-.347 0-.688-.02-1.024-.06A12.147 12.147 0 0 0 8.579 21c7.894 0 12.21-6.54 12.21-12.21 0-.187-.004-.372-.012-.556a8.719 8.719 0 0 0 2.141-2.222Z"/>
        li
          a.social__link(href="#0")
            svg.social__icon(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none")
              g(clip-path="url(#a)")
                <path d="M14.992 5.819H17V2.162C16.654 2.112 15.462 2 14.074 2 11.18 2 9.195 3.904 9.195 7.404v3.221H6v4.088h3.195V25h3.918V14.714h3.066l.486-4.088h-3.553V7.809c0-1.181.305-1.99 1.88-1.99Z"/>
              defs
                clipPath(id="a")
                  <path d="M0 0h24v24H0z"/>

    .title-wrapper
      include ../mixins/subtitle
      +subtitle('explore the Nature Beauty')
      h1.title #[span.title_accent Discover] #[br]Wonderful Indonesia
      button.scroll-down Scroll down

  section.section.container
    picture.section__image
      source(srcset="../images/holiday.webp" type="image/webp")
      img(src="../images/holiday.jpg" alt="woman in yellow dress surronded by mountains" loading="lazy")
    article.card
      include ../mixins/subtitle
      +subtitle('EAST nUSA TENGGARA')
      h2.card__title Have you enjoyed your holiday?
      p.card__content You will be amazed if you take part in this sailing Komodo island tour package. So it is also mandatory for you, besides enjoying Komodo tourism on Komodo Island, you also have to taste the marine tourism.  The beautiful waters of Komodo will make you meet many travelers from other countries.
      include ../components/more-button/more-button

  section.climb.container
    .slider-container
      .slider
        .slider__card
          picture.slider__card-image
            source(srcset="../images/mountains.webp" type="image/webp")
            img(src="../images/mountains.jpg" alt="mountains" loading="lazy")
          .slider__card-content
            .slider__card-subtitle Bromo
            h2.slider__card-title Steady your steps, we will climb together!
            p.slider__card-text Enjoying the vast expanse of the sea of ​​​​sand, witnessing the splendor of Mount Semeru that soars into the sky, and gazing at the beauty of the sun moving out of its bed or otherwise enjoying the dim twilight from the Bromo ridge is an unforgettable experience when visiting Bromo.
            include ../components/more-button/more-button
      button.prev-button(aria-label="See previous slide") &lt;
      button.next-button(aria-label="See next slide") &gt;

  section.section.container
    article.card
      include ../mixins/subtitle
      +subtitle('INDONESIAN CULTURE')
      h2.card__title Our culture here is very friendly to people
      p.card__content known for his politeness, manners and gentleness. This becomes a characteristic when they mingle with other tribes and become basic traits that are passed down by their ancestors.
      include ../components/more-button/more-button
    picture.section__image
      source(srcset="../images/culture.webp" type="image/webp")
      img(src="../images/culture.jpg" alt="two girls are sitting and smiling" loading="lazy")

  include ../components/footer/footer.pug